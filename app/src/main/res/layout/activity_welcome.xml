<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="1"
    android:background="@color/colorPrimary">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="e-Promo"
        android:id="@+id/welcome"
        android:textColor="@color/white"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/welcome"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Large Text"
        android:id="@+id/namauser"
        android:textColor="@color/white"
        android:layout_gravity="center"
        android:layout_below="@+id/welcome"
        android:layout_marginTop="@dimen/namauser"/>

    <Button
        android:layout_width="190dp"
        android:layout_height="wrap_content"
        android:text="Cari Promo"
        android:id="@+id/caripromo"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/caripromo"
        android:layout_weight="0.10" />
    <Button
        android:layout_width="190dp"
        android:layout_height="wrap_content"
        android:text="Tambah Promo"
        android:id="@+id/tambahpromo"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/tambahpromo"
        android:layout_weight="0.10" />
    <Button
        android:layout_width="190dp"
        android:layout_height="wrap_content"
        android:text="Login"
        android:id="@+id/login"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/login"
        android:layout_weight="0.10" />
    <Button
        android:layout_width="190dp"
        android:layout_height="wrap_content"
        android:text="Register"
        android:id="@+id/register"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/login"
        android:layout_weight="0.10" />
</LinearLayout>